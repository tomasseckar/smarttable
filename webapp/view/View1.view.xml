<mvc:View xmlns:smartvariants="sap.ui.comp.smartvariants" controllerName="smarttable.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:ui="sap.ui"
    xmlns:smartfilterbar="sap.ui.comp.smartfilterbar"
    xmlns:smarttable="sap.ui.comp.smarttable"

    >
    <Page id="page" title="{i18n>title}">
        <content>
            
            <Button id="button1" press="onSelect1" text="Fyzická osoba" type="Default" ></Button>           
            
            <Button id="button2" press="onSelect2" text="Právnická osoba" type="Default" ></Button>

            <smartfilterbar:SmartFilterBar id="smartFilterBar1" entitySet="ZTS_SUBJEKT_MAIN" search="onGo1" suppressSelection="false">
                <smartfilterbar:controlConfiguration>
                    <smartfilterbar:ControlConfiguration id="jmnosbFilter1" visibleInAdvancedArea="true" key="Jmnosb"/>
                    <smartfilterbar:ControlConfiguration id="prjosbFilter1" visibleInAdvancedArea="true" key="Prjosb"/>
                    <smartfilterbar:ControlConfiguration id="idnsbjFilter1" visibleInAdvancedArea="true" key="Idnsbj"/>
                </smartfilterbar:controlConfiguration>
            </smartfilterbar:SmartFilterBar>

            <smartfilterbar:SmartFilterBar id="smartFilterBar2" entitySet="ZTS_SUBJEKT_MAIN" search="onGo2" suppressSelection="false">
                <smartfilterbar:controlConfiguration>
                    <smartfilterbar:ControlConfiguration id="icoorgFilter" visibleInAdvancedArea="true" key="Icoorg"/>
                    <smartfilterbar:ControlConfiguration id="nzvorgFilter" visibleInAdvancedArea="true" key="Nzvorg"/>
                </smartfilterbar:controlConfiguration>
            </smartfilterbar:SmartFilterBar>

            <smarttable:SmartTable id="smartTable1" smartFilterId="smartFilterBar1" entitySet="ZTS_SUBJEKT_MAIN" enableAutoBinding="true" tableType="ResponsiveTable" initiallyVisibleFields="Idnsbj,Vrzsbj,Jmnosb,Prjosb,Psc,Idnspj,_Subjos._Spjadr.Psc,Agneks">
                <Table id="table1" selectionChange="onRowPress1" mode="SingleSelectMaster" growing="true" growingThreshold="20" />
            </smarttable:SmartTable>

            <smarttable:SmartTable id="smartTable2" smartFilterId="smartFilterBar2" entitySet="ZTS_SUBJEKT_MAIN" enableAutoBinding="true" tableType="ResponsiveTable" initiallyVisibleFields="Idnsbj,Vrzsbj,Icoorg,Nzvorg">
                <Table id="table2" selectionChange="onRowPress2" mode="SingleSelectMaster" growing="true" growingThreshold="20" />
            </smarttable:SmartTable>
        </content>
    </Page>
</mvc:View>
