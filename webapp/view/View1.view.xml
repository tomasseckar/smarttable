<mvc:View controllerName="smarttable.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:ui="sap.ui"
    xmlns:smartfilterbar="sap.ui.comp.smartfilterbar"
    xmlns:smarttable="sap.ui.comp.smarttable"

    >
    <Page id="page" title="{i18n>title}">
        <content>
            <RadioButtonGroup id="radioButtonGroup1" select="onSelect">
                <RadioButton id="radioButton1" text="Fyzická osoba" ></RadioButton>
                <RadioButton id="radioButton2" text="Právnická osoba" ></RadioButton>
            </RadioButtonGroup>

            <smartfilterbar:SmartFilterBar id="smartFilterBar1" entitySet="ZTS_SUBJEKT_MAIN">
                <smartfilterbar:controlConfiguration>
                    <smartfilterbar:ControlConfiguration id="idnsbjFilter1" visibleInAdvancedArea="true" key="Idnsbj"/>
                    <smartfilterbar:ControlConfiguration id="jmnosbFilter1" visibleInAdvancedArea="true" key="Jmnosb"/>
                    <smartfilterbar:ControlConfiguration id="prjosbFilter1" visibleInAdvancedArea="true" key="Prjosb"/>
                </smartfilterbar:controlConfiguration>
            </smartfilterbar:SmartFilterBar>

            <smartfilterbar:SmartFilterBar id="smartFilterBar2" entitySet="ZTS_SUBJEKT_MAIN">
                <smartfilterbar:controlConfiguration>
                    <smartfilterbar:ControlConfiguration id="idnsbjFilter2" visibleInAdvancedArea="true" key="Idnsbj"/>
                    <smartfilterbar:ControlConfiguration id="nzvorgFilter" visibleInAdvancedArea="true" key="Nzvorg"/>
                </smartfilterbar:controlConfiguration>
            </smartfilterbar:SmartFilterBar>

            <smarttable:SmartTable id="smartTable1" smartFilterId="smartFilterBar1" entitySet="ZTS_SUBJEKT_MAIN" enableAutoBinding="true" tableType="ResponsiveTable" initiallyVisibleFields="Idnsbj,Vrzsbj,Typsbj,Jmnosb,Prjosb">
                <Table id="table1" selectionChange="onRowPress1" mode="SingleSelectMaster" />
            </smarttable:SmartTable>

            <smarttable:SmartTable id="smartTable2" smartFilterId="smartFilterBar2" entitySet="ZTS_SUBJEKT_MAIN" enableAutoBinding="true" tableType="ResponsiveTable" initiallyVisibleFields="Idnsbj,Vrzsbj,Typsbj,Icoorg,Nzvorg">
                <Table id="table2" selectionChange="onRowPress2" mode="SingleSelectMaster" />
            </smarttable:SmartTable>
        </content>
    </Page>
</mvc:View>
